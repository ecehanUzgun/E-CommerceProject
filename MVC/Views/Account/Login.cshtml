@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Login" asp-controller="Account">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header">
                <h2>Login</h2>
            </div>
            <div class="card-body">
                <div>
                    <label asp-for="UserName"></label>
                    <span asp-validation-for="UserName"></span>
                    <input  class="form-control" asp-for="UserName"/>
                </div>
                <div>
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password"></span>
                    <input type="password" class="form-control" asp-for="Password"/>
                </div>
                <div class="form-check mt-2">
                    <input class="form-check-input" type="checkbox" asp-for="RememberMe"/>
                    <label class="form-check-label" asp-for="RememberMe"></label>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Login</button>
                <div>
                    <a asp-controller="Account" asp-action="ForgotPassword">Şifremi Unuttum</a>
                </div>
            </div>
        </div>
    </div>
</form>
